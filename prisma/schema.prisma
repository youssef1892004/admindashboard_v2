// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String  @id @default(cuid())
  name      String?
  email     String  @unique
  password  String
  role      String  @default("user") // admin | author | user

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
